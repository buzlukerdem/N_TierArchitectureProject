@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h2>Müşteri Ekleme Sayfası</h2>

<form method="post">
	@Html.Label("Müşteri Adı")
	@Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
	@Html.ValidationMessageFor(x=>x.Name)
	<br />
	@Html.Label("Müşteri Soyadı")
	@Html.TextBoxFor(x=>x.Surname,new {@class="form-control"})
	@Html.ValidationMessageFor(x=>x.Surname)
	<br />
	@Html.Label("E-Maili")
	@Html.TextBoxFor(x=>x.Email,new {@class="form-control"})
	@Html.ValidationMessageFor(x=>x.Email) 
	<br />
	@Html.Label("Şehri")
	@Html.TextBoxFor(x=>x.City,new {@class="form-control"})
	@Html.ValidationMessageFor(x=>x.City) 
	<br />
	@Html.Label("Yaşı")
	@Html.TextBoxFor(x=>x.Age,new {@class="form-control"})
	@Html.ValidationMessageFor(x=>x.Age) 
	<br />
	<button class="btn btn-primary">Müşteri Ekle</button>
</form>

