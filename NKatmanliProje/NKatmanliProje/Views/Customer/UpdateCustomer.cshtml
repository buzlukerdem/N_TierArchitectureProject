@model EntityLayer.Concrete.Customer

@{
	ViewData["Title"] = "UpdateCustomer";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h2>Müşteri Güncelleme Sayfası</h2>

<form method="post">
	@Html.Label("Müşteri ID")
	@Html.TextAreaFor(x=>x.Id, new {@class = "form-control"})
	<br />
	@Html.Label("Adı")
	@Html.TextAreaFor(x=>x.Name, new {@class = "form-control"})
	@Html.ValidationMessageFor(x=>x.Name)
	<br />
	@Html.Label("Soyadı")
	@Html.TextAreaFor(x=>x.Surname, new {@class = "form-control"})
	@Html.ValidationMessageFor(x=>x.Surname)
	<br />
	@Html.Label("E-Mail")
	@Html.TextBoxFor(x=>x.Email,new {@class="form-control"})
	@Html.ValidationMessageFor(x=>x.Email)
	<br />
	@Html.Label("Şehir")
	@Html.ValidationMessageFor(x=>x.City)
	@Html.TextAreaFor(x=>x.City, new {@class = "form-control"})
	<br />
	@Html.Label("Yaş")
	@Html.ValidationMessageFor(x=>x.Age)
	@Html.TextAreaFor(x=>x.Age, new {@class = "form-control"})
	<br />
	@Html.Label("Mesleği")
	@Html.DropDownListFor(x=>x.JobId,(List<SelectListItem>)ViewBag.v, new{@class="form-control"})
	<button class="btn btn-info">Müşteri Güncelle</button>
</form>


