@model EntityLayer.Concrete.Product
@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h2>Ürün Güncelleme Sayfası</h2>

<form method="post">
	@Html.Label("Ürün ID")
	@Html.TextAreaFor(x=>x.Id, new {@class = "form-control"})
	<br />
	@Html.Label("Ürün Adı")
	@Html.TextAreaFor(x=>x.Name, new {@class = "form-control"})
	@Html.ValidationMessageFor(x=>x.Name)
	<br />
	@Html.Label("Ürün Fiyatı")
	@Html.TextAreaFor(x=>x.Price, new {@class = "form-control"})
	@Html.ValidationMessageFor(x=>x.Price)
	<br />
	@Html.Label("Ürün Model")
	@Html.TextBoxFor(x=>x.Brand,new {@class="form-control"})
	@Html.ValidationMessageFor(x=>x.Brand)
	<br />
	@Html.Label("Ürün Adet")
	@Html.ValidationMessageFor(x=>x.Stock)
	@Html.TextAreaFor(x=>x.Stock, new {@class = "form-control"})
	<br />
	@Html.Label("Kategori")
	@Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v, new{@class="form-control"})
	<br />
	<button class="btn btn-info">Ürün Güncelle</button>
</form>
