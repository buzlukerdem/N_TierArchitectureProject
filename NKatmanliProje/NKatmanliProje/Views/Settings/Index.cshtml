@model NKatmanliProje.Models.UserEditModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Profil Düzenleme Sayfası</h1>

<form method="post">
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control" />
    <br />
     @Html.Label("Soyadınız")
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
     @Html.Label("E-Mail")
    <input type="text" asp-for="Email" class="form-control" />
    <br />
     @Html.Label("Cinsiyet")
    <input type="text" asp-for="Gender" class="form-control" />
    <br />
     @Html.Label("Şifre")
    <input type="text" asp-for="Password" class="form-control" />
    <br />
     @Html.Label("Şifre Tekrar")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <button class="btn btn-outline-warning">Değişiklikleri Kaydet</button>
</form>

